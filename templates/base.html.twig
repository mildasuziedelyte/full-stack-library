<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<link href="http://localhost/library/public/build/app.css" rel="stylesheet"/>
		<script src="http://localhost/library/public/build/app.js" defer></script>

		<link
		href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet"> {# <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script> #}


		{% block stylesheets %}{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>
	<body>
    
		{% include 'menu.html.twig' %}

		<main class="py-4">

			{% if errors is defined and errors|length > 0 %}
				{% include 'messages/validation.html.twig' %}
			{% endif %}

			{% if success is defined and success|length > 0 %}
				{% include 'messages/success.html.twig' %}
			{% endif %}

			{% block body %}{% endblock %}
		</main>

	</body>
</html>
