{% extends 'base.html.twig' %}

{% block title %}Add New Author
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Add New Author</h1>
					</div>

					<div class="card-body">
						<form action="{{path('author_store')}}" method="POST">
							<div class="form-group">
								<label>Name:</label>
								<input class="form-control" type="text" name="author_name" value="{{author_name}}">
								{# <small class="form-text text-muted">Author name.</small> #}
							</div>
							<div class="form-group">
								<label>Surname:</label>
								<input class="form-control" type="text" name="author_surname" value="{{author_surname}}">
								{# <small class="form-text text-muted">Author name.</small> #}
							</div>
									<div class="row justify-content-center">
							<button class="btn btn-light button-big" type="submit">Add new Author</button>
							</div>
							<input type="hidden" name="token" value="{{ csrf_token('token') }}"/>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
