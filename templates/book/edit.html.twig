{% extends 'base.html.twig' %}

{% block title %}Edit Book
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Edit book</h1>
					</div>
					<div class="card-body">
						<form action="{{path('book_update', {id: book.id})}}" method="POST">


							<div class="form-group">
								<label>Author:</label>
								<select class="form-control" name="book_author_id">
									<option value="0">Select Author</option>
									{% for author in authors %}
										<option value="{{author.id}}" {% if author.id == book.AuthorId %} selected {% endif %}>
											{{author.name}}
											{{author.surname}}
										</option>
									{% endfor %}
								</select>
							</div>

							<div class="form-group">
								<label>Title:</label>
								<input class="form-control" type="text" name="book_title" value="{{book.title}}">
							</div>

							<div class="form-group">
								<label>Pages:</label>
								<input class="form-control" type="text" name="book_pages" value="{{book.pages}}">
							</div>

							<div class="form-group">
								<label>ISBN:</label>
								<input class="form-control" type="text" name="book_isbn" value="{{book.isbn}}">
							</div>


							<div class="form-group">
								Short description:<textarea id="summernote" name="book_about">{{book.shortDescription}}</textarea>
							</div>


							<div class="row justify-content-center">
								<button class="btn btn-light button-big" type="submit">Save</button>
							</div>
							<input type="hidden" name="token" value="{{ csrf_token('token') }}"/>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
