{% extends 'base.html.twig' %}

{% block title %}Add New Book
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Add new Book</h1>
					</div>

					<div class="card-body">
						<form action="{{path('book_store')}}" method="POST">

							<div class="form-group">
								<label>Author:</label>
								<select name="book_author_id" class="form-control">
									<option value="0">Select author</option>
									{% for author in authors %}
										<option value="{{author.id}}" {% if author.id == book_author_id %} selected {% endif %}>
											{{author.name}}
											{{author.surname}}
										</option>
									{% endfor %}
								</select>
							</div>

							<div class="form-group">
								<label>Title:</label>
								<input class="form-control" type="text" name="book_title" value="{{book_title}}">
							</div>

							<div class="form-group">
								<label>Pages:</label>
								<input class="form-control" type="text" name="book_pages" value="{{book_pages}}">
							</div>

							<div class="form-group">
								<label>ISBN:</label>
								<input class="form-control" type="text" name="book_isbn" value="{{book_isbn}}">
							</div>

							<div class="form-group">
								Short description:<textarea name="book_about" id="summernote">{{book_about}}</textarea>
							</div>

							<div class="row justify-content-center">
								<button class="btn btn-light button-big text-center" type="submit">Add new Book</button>
							</div>
							<input type="hidden" name="token" value="{{ csrf_token('token') }}"/>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
